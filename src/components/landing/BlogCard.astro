---
import { Picture } from "astro:assets";
import Link from "@/components/ui/link";
import Card from "@/components/ui/card";
import type { CollectionEntry } from "astro:content";

interface Props {
  entry: CollectionEntry<"blog">;
  lang: "en" | "es" | "cat" | "de";
}

const { entry, lang } = Astro.props;
---

<Link
  client:load
  lang={lang}
  href={`/blog/${entry.id.split("/")[1]}`}
  ignoreClass={true}
>
  <Card className="h-[275px]">
    {
      entry.data.headerImage && (
        <div class="relative mx-auto h-[200px] w-full items-center justify-center overflow-hidden">
          <Picture
            fit="cover"
            formats={["avif", "webp"]}
            src={entry.data.headerImage.src}
            alt={entry.data.headerImage.alt}
            width={600}
            height={350}
            class="pointer-events-none transition-transform duration-200 ease-in-out group-hover:scale-110"
          />
        </div>
      )
    }
    <div class="flex w-full flex-1 flex-col items-center justify-between p-2">
      <div class="flex flex-col items-center justify-center gap-1">
        <h3 class="text-2xl font-semibold">{entry.data.title}</h3>
      </div>
      <p class="w-3/4 text-center">{entry.data.description}</p>
    </div>
  </Card>
</Link>
