---
import { useTranslations } from "@/i18n/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";

export function getStaticPaths() {
  const paths = [
    { params: { lang: "es" } },
    { params: { lang: "cat" } },
    { params: { lang: "de" } },
  ];
  return paths;
}

const lang = Astro.params.lang as "es" | "cat" | "de";
const t = useTranslations(lang);
---

<BaseLayout>
  <div
    class="mt-4 flex flex-col items-center justify-center rounded-md border-2 border-zinc-300 bg-zinc-200 px-8 py-4 dark:border-zinc-800 dark:bg-zinc-900"
  >
    <h3 class="text-center text-xl" set:html={t("contact.email")} />
    <h3 class="mt-10 text-xl">
      {t("contact.others")}
    </h3>
    <div class="flex gap-8">
      <a
        href="https://www.linkedin.com/in/adri%C3%A0-gomis-292a67342"
        class="transition duration-200 hover:scale-105 hover:text-primary-500 active:scale-110 active:duration-100"
      >
        <Icon name="mdi:linkedin" size="40" /></a
      >
      <a
        href="https://github.com/gomisroca"
        class="transition duration-200 hover:scale-105 hover:text-primary-500 active:scale-110 active:duration-100"
      >
        <Icon name="mdi:github" size="40" />
      </a>
    </div>
  </div>
</BaseLayout>
