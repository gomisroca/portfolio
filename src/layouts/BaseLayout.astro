---
import { ViewTransitions } from "astro:transitions";
import { getLangFromUrl } from "@/i18n/utils";
import BaseHead from "@/components/BaseHead.astro";
import Nav from "@/components/ui/nav/index.astro";
import Footer from "@/components/ui/footer/index.astro";

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead title="Adria Gomis | Portfolio" description="A portfolio of my projects, work, and other things" />
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-neutral-100 text-neutral-800 dark:bg-neutral-900 dark:text-neutral-200 overflow-x-hidden flex flex-col">
    <Nav transition:animate="none" />
    <main
      transition:animate="fade"
      class="container mx-auto flex flex-1 flex-col items-center justify-start p-4 font-body lg:p-8"
    >
      <slot />
    </main>
    <Footer />
    <slot name="scripts" />
  </body>
</html>
